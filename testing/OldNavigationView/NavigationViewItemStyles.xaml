	<Style Selector="NavigationViewItem">
		<Setter Property="Padding" Value="5 10 10 10"/>
		<!--<Setter Property="OpenLength" Value="300"/>
		<Setter Property="CompactLength" Value="45"/>-->
		<Setter Property="Height" Value="50"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="DockPanel.Dock" Value="Top"/>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Padding="{TemplateBinding Padding}"  Name="PART_Border"
						BorderThickness="{TemplateBinding BorderThickness}" 
						Background="{TemplateBinding Background}">
					<Border.Transitions>
						<Transitions>
							<DoubleTransition Property="Width" 
											  Easing="QuadraticEaseInOut"/>
						</Transitions>
					</Border.Transitions>
					<StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Left">	
						<Border Name="PART_SelectionBorder" Width="5" CornerRadius="5" />
						<Image Name="img" Source="{TemplateBinding Icon}" Stretch="Uniform" Width="16"
							   HorizontalAlignment="Center" VerticalAlignment="Center"/>
							<Border Name="PART_ContainerBorder">
								<ContentPresenter Name="PART_ContentPresenter"
											Content="{TemplateBinding Header}"
											ContentTemplate="{TemplateBinding HeaderTemplate}"
											TextBlock.FontSize="14"
											TextBlock.FontFamily="Segoe UI"
											VerticalAlignment="Center"/>
							</Border>
					</StackPanel>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
	<Style Selector="NavigationViewItem /template/ Border#PART_SelectionBorder">
		<Setter Property="Background" Value="Transparent"/>
	</Style>
	<Style Selector="NavigationViewItem:selected /template/ Border#PART_SelectionBorder">
		<Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
		<Setter Property="BoxShadow" Value="0 0 .5 0 Black"/>
	</Style>
	<Style Selector="NavigationViewItem[IsHeader=True] /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="TextBlock.FontWeight" Value="SemiLight"/>
	</Style>
	<Style Selector="NavigationViewItem[IsHeader=True] /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="TextBlock.FontWeight" Value="Bold"/>
	</Style>
	<!--<Style Selector="NavigationViewItem[IsOpen=True] /template/ Border#PART_Border">
		<Setter Property="Width" Value="{Binding $parent[NavigationViewItem].OpenLength}"/>
	</Style>
	<Style Selector="NavigationViewItem[IsOpen=False] /template/ Border#PART_Border">
		<Setter Property="Width" Value="{Binding $parent[NavigationViewItem].CompactLength}"/>
	</Style>-->
	<Style Selector="NavigationViewItem[IsOpen=False] /template/ Border#PART_ContainerBorder">
		<Setter Property="Opacity" Value="0"/>
	</Style>
	<Style Selector="NavigationViewItem[IsHeader=False]:pointerover /template/ Border#PART_Border">
		<Setter Property="BorderBrush" Value="{DynamicResource ThemeForegroundBrush}"/>
		<Setter Property="Background" Value="{DynamicResource SystemAltLowColor}"/>
	</Style>
	<Style Selector="NavigationViewItem.Footer">
		<Setter Property="VerticalAlignment" Value="Bottom"/>
		<Setter Property="DockPanel.Dock" Value="Bottom"/>
	</Style>

</Styles>