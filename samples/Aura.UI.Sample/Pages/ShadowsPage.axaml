<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:light="clr-namespace:Aura.UI.Lighting;assembly=Aura.UI.Lighting"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Aura.UI.ControlsGallery.Pages.ShadowsPage">
	<Grid>
		<Button Content="I've a shadow" Name="d"
				light:ShadowDecorator.Visible="true"
				light:ShadowDecorator.Shadow="0 0 5 0 Black"
				light:ShadowDecorator.ShadowCornerRadius="2.5"
				HorizontalAlignment="Center"/>
		<CheckBox light:ShadowDecorator.Visible="true"
				light:ShadowDecorator.Shadow="0 0 5 0 Black"
				light:ShadowDecorator.ShadowCornerRadius="2.5"
				  IsChecked="{Binding #d.(light:ShadowDecorator.Visible), Mode=TwoWay}"/>
		
	</Grid>
</UserControl>
