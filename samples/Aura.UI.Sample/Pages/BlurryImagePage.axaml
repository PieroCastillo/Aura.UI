<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Aura.UI.Gallery.Pages.BlurryImagePage"
             Classes="us_c">
  <StackPanel>
    <UniformGrid>
      <CodeExample Margin="10" Title="BlurryImage" CSharpVisible="False">
        <BlurryImage BlurLevel="{Binding #PART_slider.Value}"
                     Height="150"
                     Source="/Assets/20000.jpg"
                     Stretch="UniformToFill"/>
      </CodeExample>
    </UniformGrid>
    <Grid ColumnDefinitions="*,auto">
      <Slider Name="PART_slider" 
              IsSnapToTickEnabled="True" 
              TickFrequency="1"
              Minimum="0"
              Maximum="50"/>
      <TextBlock Grid.Column="1" Text="{Binding PART_slider.Value}"/>
    </Grid>
  </StackPanel>
</UserControl>
