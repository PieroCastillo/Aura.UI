<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			       Classes="us_c"
             x:Class="Aura.UI.ControlsGallery.Pages.ProgressRingPage">
	<StackPanel Spacing="20"
				HorizontalAlignment="Left">
		<TextBlock Text="Use the ProgressEing when you need to show progress, otherwise make it Indeterminate."/>
		<CodeExample CSharpVisible="False">
			<StackPanel Spacing="20" HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<StackPanel Orientation="Horizontal"
							Spacing="20" HorizontalAlignment="Center">
					<ProgressRing  Value="0"
								   IsIndeterminate="{Binding #tg.IsChecked}"/>
					<ToggleSwitch Name="tg" OnContent="Indeterminate"
								  OffContent="Normal"/>
				</StackPanel>
			</StackPanel>
			<CodeExample.XAMLText>
<x:String>				
&lt;ProgressRing Value="0" IsIndeterminate="{Binding #tg.IsChecked}"/>                    

&lt;ToggleSwitch Name="tg" OnContent="Indeterminate" OffContent="Normal"/>   
</x:String>                                  
			</CodeExample.XAMLText>
		</CodeExample>
		<CodeExample CSharpVisible="False">
			<StackPanel Spacing="20"
				VerticalAlignment="Center">
				<ProgressRing  Value="{Binding #num.Value, Mode=TwoWay}"
							   Maximum="{Binding #max.Text}"
							   Minimum="{Binding #min.Text}"/>
				<NumericUpDown Name="num"
							   Maximum="{Binding #max.Text}"
							   Minimum="{Binding #min.Text}"/>
				<TextBox Name="min" Watermark="Minimum" Text="0"
						 UseFloatingWatermark="True"/>
				<TextBox Name="max" Watermark="Maximum" Text="100"
						 UseFloatingWatermark="True"/>
			</StackPanel>
			<CodeExample.XAMLText>
&lt;StackPanel Spacing="20"
	&lt;VerticalAlignment="Center">
	&lt;ProgressRing Value="{Binding #num.Value, Mode=TwoWay}"
					 Maximum="{Binding #max.Text}"
				     Minimum="{Binding #min.Text}"/>
	&lt;NumericUpDown Name="num"
					  Maximum="{Binding #max.Text}"
					  Minimum="{Binding #min.Text}"/>
	&lt;TextBox Name="min" Watermark="Minimum" Text="0"
			    UseFloatingWatermark="True"/>
	&lt;TextBox Name="max" Watermark="Maximum" Text="100"
				UseFloatingWatermark="True"/>
&lt;/StackPanel>
			</CodeExample.XAMLText>
		</CodeExample>
	</StackPanel>
</UserControl>
