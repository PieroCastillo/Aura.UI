<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Aura.UI.ControlsGallery.Pages.FloatingButtonBarPage">
	<Grid>
		<TextBlock>
			<x:String>
				The FloatingButtonBar is a Control that can organize Buttons.
			</x:String>
		</TextBlock>
		<UniformGrid Rows="2" Columns="2">
			<FloatingButtonBar IsExpanded="True" OpenLength="250">
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
			</FloatingButtonBar>

			<FloatingButtonBar IsExpanded="True" OpenLength="250"
							   ExpandDirection="ToLeft">
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
			</FloatingButtonBar>
			
			<FloatingButtonBar IsExpanded="True" OpenLength="250"
							   ExpandDirection="ToTop">
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
			</FloatingButtonBar>
			
			<FloatingButtonBar IsExpanded="True" OpenLength="250"
							   ExpandDirection="ToBottom">
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
				<FloatingButton/>
			</FloatingButtonBar>
		</UniformGrid>
	</Grid>
</UserControl>
