<Window xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ms="clr-namespace:System;assembly=netstandard"
		xmlns:l="clr-namespace:UI.Tests.Views;assembly=UI.Tests"
        mc:Ignorable="d" 
        x:Class="UI.Tests.MainWindow"
		Background="{x:Null}"
        Title="UI.Tests" WindowStartupLocation="CenterScreen">
	<Window.Styles>
		<Style Selector=":is(Arc).rc">
			<Style.Animations>
				<Animation Duration="0:0:.5" FillMode="Both"
						   RepeatCount="Infinite"
						   IterationCount="Infinite">
					<KeyFrame Cue="0%">
						<Setter Property="StartAngle" Value="0"/>
						<Setter Property="SweepAngle" Value="180"/> 
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="StartAngle" Value="360"/>
						<Setter Property="SweepAngle" Value="180"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
	</Window.Styles>
		<Arc Height="100" Width="100"
			 ArcColor="{DynamicResource SystemAccentColorLight2}"
			 Stroke="5" Classes="rc"/>
</Window>