<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
      <Border Padding="0">
        <HueColorSelector Margin="1" Height="200" Width="200"/>  
      </Border>
    </Design.PreviewWith>

  <Style Selector="HueColorSelector">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <ColorWheel/>
          <ContentControl Width="20">
            <Ellipse
              Width="20"
              Height="20" 
              Fill="White" VerticalAlignment="Top"/>
            <ContentControl.RenderTransform>
              <RotateTransform Angle="{Binding $parent[HueColorSelector].YAngle}"/>
            </ContentControl.RenderTransform>
          </ContentControl>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
