<Styles xmlns="https://github.com/avaloniaui">
  <Design.PreviewWith>
    <Grid Background="White" Width="300" Height="150">
      <AudioPlayer Path="C:\Users\User\OneDrive\Escritorio\InYourBed.mp3" Volume="5"/>
    </Grid>
  </Design.PreviewWith>
  <Style Selector="AudioPlayer">
    <Setter Property="Background" Value="{DynamicResource AudioPlayerBackground}"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Border Name="PART_Border"
                Background="{TemplateBinding Background}"
                CornerRadius="{DynamicResource AudioPlayerCornerRadius}"
                Margin="5"
                BoxShadow="0 0 3 0 Black">
          <Grid RowDefinitions="5,15,5,auto,5,*,5,auto,5" ColumnDefinitions="5,auto,5">
            <Button Grid.Row="1" Grid.Column="1">
              <Image Name="PART_Img"/> 
            </Button>
          </Grid>
        </Border> 
      </ControlTemplate>
    </Setter>
  </Style>
  <Style Selector="AudioPlayer /template/ Image#PART_Img"></Style>
</Styles>