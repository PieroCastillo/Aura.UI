<Styles xmlns="https://github.com/avaloniaui"
        xmlns:comp="using:Aura.UI.Controls.Components">
  <Design.PreviewWith>
    <comp:RadialColorSlider/>
  </Design.PreviewWith>
  <Style Selector="comp|RadialColorSlider">
    <Setter Property="Width" Value="150" />
    <Setter Property="Height" Value="150" />
    <Setter Property="StrokeWidth" Value="7" />
  </Style>
  <Style Selector="comp|RadialColorSlider">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <ColorWheel StrokeWidth="10"/>
          <ContentControl Width="10"
                          Height="{Binding $parent[RadialSlider].Width}"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Center">
            <ContentControl.RenderTransform>
                <RotateTransform Angle="{Binding $parent[RadialSlider].YAngle}"/>
            </ContentControl.RenderTransform>
            <Ellipse Stroke="Black" 
                     StrokeThickness="1" 
                     Fill="#99FFFFFF"
                     Width="10" 
                     Height="10"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top">
            </Ellipse>
          </ContentControl>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>