	<Style Selector="NavigationViewItemBase">
		<Setter Property="Padding" Value="0 5" />
		<Setter Property="MinWidth" Value="0" />
		<Setter Property="DockPanel.Dock" Value="Top" />
		<Setter Property="VerticalAlignment" Value="Top" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="IsOpen" Value="{Binding $parent[NavigationView].IsOpen, Mode=TwoWay}"/>
		<Setter Property="CompactPaneLength" Value="{Binding $parent[NavigationView].CompactPaneLength, Mode=OneWay}"/>
		<Setter Property="OpenPaneLength" Value="{Binding $parent[NavigationView].OpenPaneLength, Mode=OneWay}"/>
		<Setter Property="ItemsPanel">
			<ItemsPanelTemplate>
				<StackPanel Orientation="Vertical" />
			</ItemsPanelTemplate>
		</Setter>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Name="PART_Border"
				        BorderThickness="{TemplateBinding BorderThickness}">
					<Grid RowDefinitions="*,auto">
						<!-- <Grid.Styles> -->
						<!-- 	<Style Selector="PressedGrid:pressed#PART_Grid"> -->
						<!-- 		<Setter Property="RenderTransform" Value="scale(0.98)"/> -->
						<!-- 	</Style> -->
						<!-- </Grid.Styles> -->
						<PressedGrid Grid.Row="0"
						      ColumnDefinitions="auto,*"
						      Name="PART_Grid" 
						      Background="{TemplateBinding Background}">
							<!-- <PressedGrid.Transitions> -->
							<!-- 	<Transitions> -->
							<!-- 		<TransformOperationsTransition Property="RenderTransform" Duration="0:0:.075" /> -->
							<!-- 	</Transitions> -->
							<!-- </PressedGrid.Transitions> -->
							<Grid Name="PART_InternalGrid"
								  Grid.Column="1"
							      ColumnDefinitions="auto,*"
							      Margin="{TemplateBinding NavigationViewDistance, Mode=OneWay, Converter={StaticResource LevelConv}}">
								<Grid Grid.Row="1"
								      Width="{Binding $parent[NavigationViewItemBase].CompactPaneLength, Mode=OneWay}"
								      Height="{Binding $parent[NavigationViewItemBase].CompactPaneLength, Mode=OneWay}">
									<Border Grid.Column="1"
									        Name="PART_SelectionBorder"
									        Width="2.5"
									        Margin="5 10 10 10"
									        HorizontalAlignment="Left"
									        CornerRadius="5" />
									<Image Grid.Column="2"
									       Name="PART_ImgT"
									       Source="{TemplateBinding Icon}"
									       Stretch="UniformToFill"
									       HorizontalAlignment="Left"
									       Margin="{DynamicResource NavigationViewItemIconMargin}"
									       VerticalAlignment="Center" />
								</Grid>
								<Grid Grid.Column="1"	Name="PART_ContainerGrid"
									ColumnDefinitions="10,*,5,Auto,5">
									<Border Grid.Column="1" Grid.Row="1"
									        Name="PART_ContainerBorder">	
										<Border.Transitions>
											<Transitions>
												<DoubleTransition Property="Opacity" Duration="0:0:0.4"
												                  Easing="ExponentialEaseOut" />
											</Transitions>
										</Border.Transitions>
										<ContentPresenter Name="PART_ContentPresenter"
										                  Content="{TemplateBinding Header}"
										                  TextBlock.FontSize="14"
										                  TextBlock.FontFamily="Segoe UI"
										                  VerticalAlignment="Center" />
									</Border>
									<ToggleButton Grid.Column="3"
									              Grid.Row="1"
									              Padding="2.5,2.5" Margin="5"
									              Classes=".togglenav"
									              VerticalAlignment="Center"
									              HorizontalAlignment="Right"
									              IsChecked="{TemplateBinding IsExpanded, Mode=TwoWay}"
									              Background="Transparent">
										<Image Name="PART_Img" Height="15" Width="15"
										       Source="{DynamicResource Entypo+.ChevronThinDown}">
											<Image.Transitions>
												<Transitions>
													<DoubleTransition Property="RotateTransform.Angle"
													                  Duration="0:0:1" />
												</Transitions>
											</Image.Transitions>
										</Image>
									</ToggleButton>
								</Grid>
							</Grid>
						</PressedGrid>
						<Border Grid.Row="1" Grid.Column="1" Name="PART_BottomBorder">
							<ItemsPresenter Name="PART_ItemsPresenter"
							                Items="{TemplateBinding Items}"
							                ItemsPanel="{TemplateBinding ItemsPanel}" />
						</Border>
					</Grid>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
	
	<Style Selector=":is(NavigationViewItemBase) /template/ Grid#PART_InternalGrid">
		<Setter Property="Margin" Value="{Binding $parent[NavigationView].NavigationViewDistance, Mode=OneWay, Converter={StaticResource LevelConv}}"/>
	</Style>	
	<Style Selector=":is(NavigationViewItemBase).header /template/ Grid#PART_InternalGrid">
		<Setter Property="Margin" Value="0"/>
	</Style>
	
	<!-- <Style Selector="NavigationViewItemBase[IsOpen=false]"> -->
	<!-- 	<Setter Property="ToolTip.Tip" Value="{Binding $self.Header}" /> -->
	<!-- </Style> -->
	
	<Style Selector=":is(NavigationViewItemBase)[IsOpen=True] /template/ Grid#PART_ContainerGrid">
		<Style.Animations>
			 <Animation Duration="00:00:00.2" Easing="ExponentialEaseOut"> <!--Easing="0.1,0.9,0.2,1.0"> -->
				<KeyFrame Cue="0%">
					<Setter Property="Width" Value="0"/>
					<Setter Property="Opacity" Value="0"/>
				</KeyFrame>
				<KeyFrame Cue="100%">
					<Setter Property="Opacity" Value="1"/>
					<Setter Property="Width" Value="{Binding $parent[NavigationViewItemBase].ExternalLength}"/>
				</KeyFrame>
			</Animation>
		</Style.Animations>
	</Style>	
	
	<Style Selector=":is(NavigationViewItemBase)[IsOpen=False] /template/ Grid#PART_ContainerGrid">
		<Style.Animations>
			<Animation Duration="00:00:00.2" Easing="ExponentialEaseOut"><!-- Easing="0.1,0.9,0.2,1.0">-->
				<KeyFrame Cue="0%">
					<Setter Property="Opacity" Value="1"/>
					<Setter Property="Width" Value="{Binding $parent[NavigationViewItemBase].ExternalLength}"/>
				</KeyFrame>
				<KeyFrame Cue="100%">
					<Setter Property="Opacity" Value="0"/>
					<Setter Property="Width" Value="0"/>
				</KeyFrame>
			</Animation>
		</Style.Animations>
	</Style>

	<Style Selector=":is(NavigationViewItemBase)[IsExpanded=true] /template/ ItemsPresenter#PART_ItemsPresenter">
		<Style.Animations>
			<Animation Duration="0:0:0.3" FillMode="Forward" Easing="CubicEaseOut">
				<KeyFrame Cue="0%">
					<Setter Property="TranslateTransform.Y" Value="{Binding $parent.Bounds.Height}" />
				</KeyFrame>
				<KeyFrame Cue="100%">
					<Setter Property="TranslateTransform.Y" Value="0" />
				</KeyFrame>
			</Animation>
		</Style.Animations>
	</Style>

	<Style Selector=":is(NavigationViewItemBase):selected /template/ Border#PART_SelectionBorder">
		<Setter Property="Background" Value="{DynamicResource NavigationViewItemSelectedBrush}" />
		<Setter Property="BoxShadow" Value="{BoxShadow BlurRadius=.5, ShadowColor=Gray}" /><!--0 0 .5 0 Black-->
	</Style>
	<Style Selector=":is(NavigationViewItemBase):empty /template/ ToggleButton">
		<Setter Property="Opacity" Value="0" />
	</Style>
	<Style Selector=":is(NavigationViewItemBase) /template/ ToggleButton[IsChecked=True] /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="Transparent" />
	</Style>

	<Style Selector=":is(NavigationViewItemBase)[IsExpanded=False] /template/ Image#PART_Img">
		<Style.Animations>
			<Animation Duration="0:0:0.5" Easing="ExponentialEaseOut" FillMode="Forward">
				<KeyFrame Cue="0%">
					<Setter Property="RotateTransform.Angle" Value="190" />
				</KeyFrame>
				<KeyFrame Cue="100%">
					<Setter Property="RotateTransform.Angle" Value="0" />
				</KeyFrame>
			</Animation>
		</Style.Animations>
	</Style>
	<Style Selector=":is(NavigationViewItemBase)[IsExpanded=True] /template/ Image#PART_Img">
		<Style.Animations>
			<Animation Duration="0:0:0.5" Easing="ExponentialEaseOut" FillMode="Forward">
				<KeyFrame Cue="0%">
					<Setter Property="RotateTransform.Angle" Value="0" />
				</KeyFrame>
				<KeyFrame Cue="100%">
					<Setter Property="RotateTransform.Angle" Value="180" />
				</KeyFrame>
			</Animation>
		</Style.Animations>
	</Style>

	<!-- <Style Selector=":is(NavigationViewItemBase)[IsOpen=True]"> -->
	<!-- 	<Setter Property="Width" Value="{Binding $parent[NavigationView].OpenPaneLength}" /> -->
	<!-- </Style> -->
	<!-- <Style Selector=":is(NavigationViewItemBase)[IsOpen=false]"> -->
	<!-- 	<Setter Property="Width" Value="{Binding $parent[NavigationView].CompactPaneLength}" /> -->
	<!-- </Style> -->

	<Style Selector=":is(NavigationViewItemBase)[IsOpen=true] /template/ Border#PART_ContainerBorder">
		<Setter Property="Opacity" Value="1" />
	</Style>
	<Style Selector=":is(NavigationViewItemBase)[IsOpen=False] /template/ Border#PART_ContainerBorder">
		<Setter Property="Opacity" Value="0" />
	</Style>

	<Style Selector=":is(NavigationViewItemBase) /template/ PressedGrid#PART_Grid:pointerover">
		<Setter Property="Background" Value="{DynamicResource NavigationViewItemPointerOver}" />
	</Style>
	<Style Selector=":is(NavigationViewItemBase).header /template/ PressedGrid#PART_Grid:pointerover">
		<Setter Property="Background" Value="Transparent" />
	</Style>

	<Style Selector=":is(NavigationViewItemBase)[IsExpanded=False] /template/ :is(Control)#PART_BottomBorder">
		<Setter Property="Height" Value="0" />
	</Style>
</Styles>