													<Image Source="{DynamicResource Ionicons.CloseMD}"/>
												</Button>
											</Grid>

											<Border Name="PART_Separator"
											Grid.Column="1" Grid.Row="0" CornerRadius="5"
											BoxShadow="0 0 2 0 Gray"
											Width="1" 
											Background="{DynamicResource ThemeForegroundBrush}"></Border>
										</Grid>
									</Border>

								</Grid>
